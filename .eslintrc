{
  "env": {
    "amd": false,
    "applescript": false,
    "browser": true,
    "commonjs": false,
    "embertest": false,
    "jasmine": false,
    "jest": false,
    "jquery": true,
    "meteor": false,
    "mocha": true,
    "mongo": false,
    "nashorn": false,
    "phantomjs": false,
    "prototypejs": false,
    "protractor": false,
    "qunit": false,
    "serviceworker": false,
    "shelljs": false,
    "webextensions": false,
    "worker": false,
  },

  "globals": {
    // additional predefined global variables
  },

  "plugins": [
    // e.g. "react" (must run `npm install eslint-plugin-react` first)
  ],

  "extends": [
    // extend the set of enabled rules
    "standard"
  ],

  "rules": {
    // http://eslint.org/docs/rules/

    ////////// Possible Errors //////////
    "no-await-in-loop": "error",
    "no-console": "error",
    "no-empty": "error",
    "no-extra-semi": "error",
    "no-prototype-builtins": "error",
    "valid-jsdoc": "off",


    ////////// Best Practices //////////
    "array-callback-return": "error",
    "block-scoped-var": "off",
    "class-methods-use-this": "error",
    "complexity": ["off", 11],
    "consistent-return": "off",
    "default-case": "off",
    "dot-notation": ["warn", { "allowKeywords": true }],
    "guard-for-in": "error",
    "no-alert": "off",
    "no-case-declarations": "off",
    "no-div-regex": "off",
    "no-else-return": "off",
    "no-empty-function": "warn",
    "no-eq-null": "error",
    "no-extra-label": "error",
    "no-implicit-coercion": "error",
    "no-implicit-globals": "off",
    "no-invalid-this": "off",
    "no-magic-numbers": ["error", { "ignoreArrayIndexes": true, "ignore": [-1, 0, 1] }],
    "no-param-reassign": "off",
    "no-restricted-properties": "off",
    "no-script-url": "error",
    "no-unused-expressions": "off",
    "no-unused-labels": "error",
    "no-useless-concat": "error",
    "no-useless-return": "error",
    "no-void": "off",
    "no-warning-comments": ["off", { "terms": ["todo", "fixme", "xxx"], "location": "start" }],
    "radix": "off",
    "vars-on-top": "off",


    ////////// Strict Mode //////////
    "strict": ["error", "function"],


    ////////// Variables //////////
    "init-declarations": "off",
    "no-catch-shadow": "off",
    "no-restricted-globals": "off",
    "no-shadow": "off",
    "no-undefined": "off",
    "no-use-before-define": "off",


    ////////// Node.js and CommonJS //////////
    "callback-return": "off",
    "global-require": "off",
    "no-mixed-requires": ["off", false],
    "no-process-exit": "off",
    "no-restricted-modules": "off",
    "no-sync": "off",


    ////////// Stylistic Issues //////////
    "array-bracket-spacing": ["warn", "never"],
    "computed-property-spacing": ["warn", "never"],
    "consistent-this": ["warn", "context"],
    "func-name-matching": "off",
    "func-names": "off",
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "id-blacklist": "warn",
    "id-length": "warn",
    "id-match": "off",
    "jsx-quotes": ["error", "prefer-single"],
    "line-comment-position": "off",
    "linebreak-style": ["error", "unix"],
    "lines-around-comment": "warn",
    "lines-around-directive": ["warn", { "before": "never", "after": "always" }],
    "max-depth": ["warn", 4],
    "max-len": ["off", 80, 4],
    "max-lines": "off",
    "max-nested-callbacks": ["warn", 5],
    "max-params": ["warn", 5],
    "max-statements": ["off", 10],
    "max-statements-per-line": ["error", { "max": 3 }],
    "multiline-ternary": "off",
    "newline-after-var": "off",
    "newline-before-return": "off",
    "newline-per-chained-call": "off",
    "no-bitwise": "error",
    "no-continue": "warn",
    "no-inline-comments": "warn",
    "no-lonely-if": "error",
    "no-mixed-operators": "warn",
    "no-negated-condition": "off",
    "no-nested-ternary": "error",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-restricted-syntax": "off",
    "no-ternary": "off",
    "no-underscore-dangle": "off",
    "object-curly-newline": ["warn", {"ObjectExpression": {"minProperties": 1}, "ObjectPattern": {"minProperties": 1}}],
    "object-curly-spacing": ["warn", "always"],
    "one-var-declaration-per-line": ["warn", "always"],
    "operator-assignment": ["off", "always"],
    "quote-props": ["warn", "consistent"],
    "require-jsdoc": "error",
    "sort-keys": "off",
    "sort-vars": "off",
    "wrap-regex": "off",


    ////////// ECMAScript 6 //////////
    "arrow-body-style": ["warn", "as-needed"],
    "arrow-parens": ["warn", "as-needed"],
    "generator-star-spacing": ["error", {"before": true, "after": true}],
    "no-confusing-arrow": ["warn", {"allowParens": false}],
    "no-restricted-imports": "off",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": ["warn", { "allowNamedFunctions": true }],
    "prefer-const": "error",
    "prefer-numeric-literals": "error",
    "prefer-rest-params": "off",
    "prefer-spread": "off",
    "prefer-template": "error",
    "require-yield": "error",
    "sort-imports": ["warn", { "ignoreCase": true }],
    "symbol-description": "off"
  }
}
