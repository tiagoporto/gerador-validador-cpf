$input
	adjust-font-size-to($base-font-size)
	rhythm-borders(1px, .25, $base-font-size, solid lighten(#000, 60%))
	border-radius: 5px
	color: lighten(#000, 35%)
	width: 100%
	trailer(.5)

	&:focus
		border-color: #66afe9
		outline: 0
		box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)


.fieldset
	margin: 0
	rhythm-borders(1px, 1, $base-font-size, solid lighten(#000, 60%))

.input
	@extend $input
	height: em($base-line-height / 2 * 3)

.textarea
	@extend $input

.input-disabled
	background: lighten(#000, 95%)

::placeholder
	color: lighten(#000, 55%)
	font-size: em($base-font-size - 2)