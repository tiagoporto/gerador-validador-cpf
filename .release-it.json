{
  "hooks": {},
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "releaseName": "v${version}",
    "release": true,
    "draft": false,
    "assets": ["dd/*.zip"]
  },
  "npm": {
    "publish": false
  },
  "gitlab": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "context": {
        "linkCompare": true
      }
    }
  }
}
